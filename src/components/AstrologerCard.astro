---
const astrologers = [
  {
    name: "Pandit Sharma Ji",
    specialties: ["Vedic Astrology", "Numerology", "Gemology"],
    experience: "25+ years",
    location: "Karol Bagh, Delhi",
    image: "https://images.unsplash.com/photo-1614846384571-1e31322ed3a9?w=800&auto=format&fit=crop&q=60",
    rating: 4.9,
    reviews: 238,
    price: "₹2,100"
  },
  {
    name: "Dr. Gupta Ji",
    specialties: ["Horoscope Reading", "Vastu", "Face Reading"],
    experience: "20+ years",
    location: "Connaught Place, Delhi",
    image: "https://images.unsplash.com/photo-1592878849122-facb97520f9e?w=800&auto=format&fit=crop&q=60",
    rating: 4.8,
    reviews: 186,
    price: "₹1,800"
  },
  {
    name: "Acharya Verma Ji",
    specialties: ["Palmistry", "Tarot Reading", "Crystal Healing"],
    experience: "18+ years",
    location: "Rohini, Delhi",
    image: "https://images.unsplash.com/photo-1625314887424-9f191e00c903?w=800&auto=format&fit=crop&q=60",
    rating: 4.7,
    reviews: 156,
    price: "₹1,500"
  }
];
---

{astrologers.map((astrologer) => (
  <div class="bg-white rounded-2xl shadow-lg overflow-hidden transform hover:scale-105 transition-all duration-300">
    <div class="relative">
      <img
        src={astrologer.image}
        alt={astrologer.name}
        class="w-full h-64 object-cover"
      />
      <div class="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-black/70 to-transparent p-6">
        <div class="flex items-center text-white">
          <span class="text-yellow-400">★</span>
          <span class="ml-1 font-semibold">{astrologer.rating}</span>
          <span class="mx-1">•</span>
          <span class="text-sm">{astrologer.reviews} reviews</span>
        </div>
      </div>
    </div>
    
    <div class="p-6">
      <div class="flex justify-between items-start mb-4">
        <div>
          <h3 class="text-xl font-bold text-gray-900 mb-1">{astrologer.name}</h3>
          <p class="text-primary-600 font-semibold">{astrologer.experience} Experience</p>
        </div>
        <span class="text-xl font-bold text-secondary-600">{astrologer.price}</span>
      </div>
      
      <div class="mb-4">
        <div class="flex items-center text-gray-600 mb-2">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
          </svg>
          {astrologer.location}
        </div>
      </div>

      <div class="mb-6">
        <div class="flex flex-wrap gap-2">
          {astrologer.specialties.map((specialty) => (
            <span class="bg-primary-50 text-primary-700 text-sm px-3 py-1 rounded-full">
              {specialty}
            </span>
          ))}
        </div>
      </div>

      <div class="flex gap-3">
        <a
          href="#contact"
          class="flex-1 bg-primary-600 text-white text-center py-3 rounded-xl font-semibold hover:bg-primary-700 transition-colors"
        >
          Book Now
        </a>
        <button
          class="px-4 py-3 border-2 border-primary-600 text-primary-600 rounded-xl hover:bg-primary-50 transition-colors"
        >
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
          </svg>
        </button>
      </div>
    </div>
  </div>
))}

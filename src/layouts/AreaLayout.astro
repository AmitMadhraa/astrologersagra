---
import Layout from './Layout.astro';
import ContactForm from '../components/ContactForm.astro';
import AreaAstrologers from '../components/AreaAstrologers.astro';

const { areaName } = Astro.props;
---

<Layout title={`${areaName} Area Astrologers - Agra Astro`}>
  <main>
    <!-- Area Hero Section -->
    <section class="relative py-20 bg-gradient-to-br from-primary-900 via-primary-800 to-secondary-900">
      <div class="absolute inset-0 opacity-10">
        <div class="absolute top-0 left-0 w-96 h-96 bg-primary-500 rounded-full filter blur-3xl transform -translate-x-1/2 -translate-y-1/2"></div>
        <div class="absolute bottom-0 right-0 w-96 h-96 bg-secondary-500 rounded-full filter blur-3xl transform translate-x-1/2 translate-y-1/2"></div>
      </div>

      <div class="container mx-auto px-4 relative z-10">
        <div class="max-w-3xl mx-auto text-center text-white">
          <h1 class="text-4xl md:text-6xl font-display font-bold mb-6">
            Expert Astrologers in {areaName} Area
          </h1>
          <p class="text-xl text-gray-300 mb-8">
            Connect with the most experienced astrologers in {areaName} Area, Agra for personalized spiritual guidance
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a href="#contact" class="inline-block bg-secondary-500 text-white px-8 py-4 rounded-full font-semibold hover:bg-secondary-600 transform hover:scale-105 transition-all">
              Book a Consultation
            </a>
            <a href="#specialties" class="inline-block bg-white/10 text-white px-8 py-4 rounded-full font-semibold hover:bg-white/20 backdrop-blur-sm transform hover:scale-105 transition-all">
              View Specialties
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Area Statistics -->
    <section class="py-12 bg-white">
      <div class="container mx-auto px-4">
        <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
          <div class="text-center">
            <div class="text-4xl font-bold text-primary-600 mb-2">20+</div>
            <div class="text-gray-600">Expert Astrologers</div>
          </div>
          <div class="text-center">
            <div class="text-4xl font-bold text-primary-600 mb-2">9</div>
            <div class="text-gray-600">Specialties</div>
          </div>
          <div class="text-center">
            <div class="text-4xl font-bold text-primary-600 mb-2">1000+</div>
            <div class="text-gray-600">Happy Clients</div>
          </div>
          <div class="text-center">
            <div class="text-4xl font-bold text-primary-600 mb-2">4.8â˜…</div>
            <div class="text-gray-600">Average Rating</div>
          </div>
        </div>
      </div>
    </section>

    <!-- Area Astrologers Section -->
    <section id="specialties" class="py-16 bg-gray-50">
      <div class="container mx-auto px-4">
        <div class="text-center max-w-2xl mx-auto mb-16">
          <h2 class="text-4xl font-display font-bold text-gray-900 mb-4">
            Find Your Expert in {areaName} Area
          </h2>
          <p class="text-gray-600">
            Browse through our carefully curated list of experienced astrologers specializing in various disciplines
          </p>
        </div>

        <AreaAstrologers areaName={areaName} />
      </div>
    </section>

    <!-- Contact Form -->
    <section id="contact" class="py-20 bg-white">
      <div class="container mx-auto px-4">
        <div class="text-center max-w-2xl mx-auto mb-16">
          <h2 class="text-4xl font-display font-bold text-gray-900 mb-4">Book a Consultation</h2>
          <p class="text-gray-600">Take the first step towards clarity and guidance with our {areaName} Area experts</p>
        </div>
        <ContactForm />
      </div>
    </section>
  </main>
</Layout>
